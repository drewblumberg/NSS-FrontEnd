.contain-to-grid.fixed
  nav.top-bar
    ul.title-area
      li.name
        h1: a(href="/") Super Todo
      li.toggle-topbar.menu-icon
        a(href="#")
          span Menu

    section.top-bar-section
      ul.left
      ul.right
        li.divider
        if !user
          li.has-form: a#auth-button.button.radius(href="#" data-email="anonymous") Login | Sign Up
          li.divider
        else
          li.has-form: a#auth-button.button.radius.alert(href="#" data-email=user.email)= user.email
          li.divider


