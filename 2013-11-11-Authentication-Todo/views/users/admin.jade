extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      #errorMsg
  .row
    .small-6.columns
    .small-6.columns
      include ../home/auth-form
  .row
    .small-12.columns
      table#users
        thead
          tr
            th Email
            th IsAdmin
            th Delete
        tbody
          each user in users
            tr(data-id=user.id)
              td= user.email
              td: input(type="checkbox" checked=user.isAdmin).toggleAdmin
              td
                form(action='/users/' + user.id + '/delete', method='post')
                  input(type='hidden' name='_method' value='delete')
                  button(value='submit').alert.small.radius Delete


