form#authentication.hidden(action='/users', method='post')
  fieldset
    legend Sign Up
    .row
      mixin field(6, 'text', 'email', 'Email', null, 'you@example.com')
      mixin field(6, 'password', 'password', 'Password')
    .row
      .small-3.small-offset-6.columns: button#register.radius.small.expand Register
      .small-3.columns: button#login.radius.small.expand.success Log In

