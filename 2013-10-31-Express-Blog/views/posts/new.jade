extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      h1.subheader New Post
  .row
    .small-2.columns
      a.button.expand.small.radius(href='/') Home
    .small-2.columns
      a.button.expand.small.radius(href='/posts') Posts
    .small-2.columns
      a.button.expand.small.radius.success(href='/posts/new') New Post
    .small-6.columns
  .row
    .small-12.columns
      form(action='/posts', method='post')
        fieldset
          legend New Blog Post
          .row
            mixin field(4, 'title', 'Title', null, null, true)
            mixin field(4, 'author', 'Author')
            mixin field(4, 'date', 'Date', date)
          .row
            mixin field(8, 'tags', 'Tags')
            mixin field(4, 'image', 'Image URL')
          .row
            .small-12.columns
              label(for='content') Blog Content:
              textarea#content(name='content')
          .row
            .small-4.columns
            .small-4.offset-4.columns
              a.button.alert.small.radius.expand(href='/posts') Cancel
            .small-4.columns
              button(value='submit').success.small.radius.expand Save Post
