%head
  %meta{charset: "utf-8"}
  %meta{name: "viewport", content: "width=device-width"}
  %title Foundation 4
  %link{rel: "stylesheet", href: "css/normalize.css"}
  %link{rel: "stylesheet", href: "css/foundation.css"}
  %link{rel: "stylesheet", href: "css/app.css"}
  %script{src: "js/vendor/custom.modernizr.js"}
%body
  .row
    .small-12.columns
      %h1 Inventory System
  .row
    .small-2.columns
      %input#person{type: 'text', placeholder: 'Name'}
    .small-8.columns
      %input#address{type: 'text', placeholder: 'Address'}
    .small-2.columns
      %input#save.button.small.radius{type: 'button', value: 'Save'}
  .row
    .small-2.columns
      %input#name{type: 'text', autofocus: true, placeholder: 'Item Name'}
    .small-2.columns
      %input#amount{type: 'text', placeholder: 'How Many'}
    .small-2.columns
      %input#value{type: 'text', placeholder: 'Value'}
    .small-2.columns
      %input#room{type: 'text', placeholder: 'Room'}
    .small-2.columns
      %input#condition{type: 'text', placeholder: 'Condition'}
    .small-2.columns
      %input#date{type: 'text', placeholder: 'Date Purchased'}
  .row
    .small-6.small-offset-3.columns
      %input#add.button.success.small.radius{type: 'button', value: 'Add'}
  .row
    .small-2.columns
      %h4.subheader Grand Total
    .small-2.columns
      %h4#total.subheader
    .small-8.columns
  .row
    .small-12.columns
      %table#items
        %tr
          %th Name
          %th Count
          %th Cost
          %th Room
          %th Condition
          %th Date Purchased
      .clear




  %script{src: 'https://cdn.firebase.com/v0/firebase.js'}
  %script{src: 'js/vendor/jquery-1.10.2.js'}
  %script{src: 'js/vendor/foundation.min.js'}
  %script{src: 'js/vendor/underscore.js'}
  %script{src: 'js/app/app.js'}
