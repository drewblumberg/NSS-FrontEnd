!!! 5
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %title Haml/Sass Template
    %link{rel: "stylesheet", href:'css/normalize.css'}
    %link{rel: "stylesheet", href:'css/style.css'}
  %body
    #container
      %header
        %h1.logo To Do List
      #set_tasks
        %table#get
          %tr
            %th Due Date
            %th Task
            %th Color
          %tr
            %td
              %input#due{type: 'text'}
            %td
              %input#task{type: 'text'}
            %td
              %input#colorInput{type: 'text'}
            %td
              %input#task_btn{type: 'button', value: 'Add Task'}
        %h1.logo
          Tasks
        %table#set
          %tr.headRow
            %th Due Date
            %th Task
            %th Color
            %th Done?
            %th Remove?
            %th Up/Down



    %script{src: 'js/jquery-1.10.2.min.js'}
    %script{src: 'js/underscore-min.js'}
    %script{src: 'js/main.js'}

