extends ../template/layout

block content
  h1 Address Book
  h2 People Page
  p: a(title=home href='/') Home Page
  p: a(href='/people/new') New Person
  - var person = people[0]

  if person
    table#people
      thead: tr
        each value, key in person
          th= key
      tbody
        each person, index in people
          tr(style='background-color: #{person.color}', id=person.name)
            each value, property in person
              td(class = property)= value


