extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      h2.subheader New Song
  include ../template/errors
  .row
    .small-12.columns
      form(action='/songs', method='post')
        fieldset
          legend New Song
          .row
            mixin field(6, 'title', 'Title', null, null, true)
            mixin field(6, 'duration', 'Song Duration (s)')
          .row
            mixin field(6, 'filename', 'Song file name')
            mixin field(6, 'coverArt', 'Song Image')
          .row
            .small-12.columns
              each genre in genres
                input.genreBox(type='checkbox', name='genres', value=genre.id)
                span= genre.name
          .row
            .small-12.columns
              label(for='lyrics') Lyrics:
              textarea#lyrics(name='lyrics')
          .row
            .small-2.small-offset-8.columns
              a.button.alert.small.radius.expand(href='/songs') Cancel
            .small-2.columns
              button(value='submit').success.small.radius.expand Save Song
