.row
  .small-12.columns
    form(action='/genres/#{genre.isNew ? "" : genre.id}', method='post')
      if !genre.isNew
        input(type='hidden', name='_method', value='put')

      fieldset
        legend= title
        .row
          mixin field(12, 'name', 'Name', genre.name, null, true)
        .row
          .small-2.small-offset-8.columns
            a.button.alert.small.radius.expand(href='/artists') Cancel
          .small-2.columns
            button(value='submit').success.small.radius.expand Save Genre