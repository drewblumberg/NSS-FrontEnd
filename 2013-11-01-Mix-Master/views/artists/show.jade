extends ../template/layout

block content
  .row
    .small-5.columns
      #info
        h3.subheader= artist.name
        img(src=artist.photo)
        h6.subheader Songs
          ul.songsByArtist
            each song in artist.songids
              li: a(href='/songs/#{song.id}').songLink= song.title
        form(action='/artists/#{artist.id}', method='post')
          input(type='hidden', name='_method', value='delete')
          button(value='submit').tiny.radius.alert DELETE
    .small-7.columns
        p.bio= artist.bio


