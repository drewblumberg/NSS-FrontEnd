extends ../template/layout
include ../mixins/form-helper

block content
  .row
    .small-12.columns
      h2.subheader New Artist
  .row
    .small-12.columns
      form(action='/artists', method='post')
        fieldset
          legend New Artist
          .row
            mixin field(4, 'name', 'Name', null, null, true)
            mixin field(4, 'photo', 'Photo URL')
            mixin field(4, 'website', 'Band Website')
          .row
            .small-12.columns
              label(for='bio') Bio:
              textarea#bio(name='bio')
          .row
            .small-12.columns
              each song in songs
                input(type='checkbox', value=song.id, name='songids')
                span= song.title
          .row
            .small-2.small-offset-8.columns
              a.button.alert.small.radius.expand(href='/artists') Cancel
            .small-2.columns
              button(value='submit').success.small.radius.expand Save Artist
